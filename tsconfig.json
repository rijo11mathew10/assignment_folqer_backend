{
  "compilerOptions": {
    "outDir": "./dist",  // Ensure compiled files go to the dist directory
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],  // Make sure your TypeScript files are in 'src'
  "exclude": ["node_modules"]
}
